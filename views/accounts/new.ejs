<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center">UPDATE DETAILS</h1>
            <div class="card shadow">
                <div class="card-body">
                    <form action="/<%=currentUser._id %>/data" method="POST" class="validated-form"
                        enctype="multipart/form-data" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="date">DATE</label>
                            <input class="form-control" type="text" id="date" placeholder="DD/MM/YYYY" name="date"
                                required autofocus>
                            <div class="invalid-feedback">
                                Please enter the date.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="bonus">TODAY'S BONUS</label>
                            <div class="input-group">
                                <span class="input-group-text" id=" price-label">₹</span>
                                <input type="text" class="form-control" id="bonus" placeholder="0.00" aria-label="price"
                                    aria-describedly="price-lebel" name="bonus" required>
                                <div class="invalid-feedback">
                                    Please enter the price.
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="expenditure">TODAY'S EXPENDITURE</label>
                            <div class="input-group">
                                <span class="input-group-text" id=" price-label">₹</span>
                                <input type="text" class="form-control" id="expenditure" placeholder="0.00"
                                    aria-label="price" aria-describedly="price-lebel" name="expenditure" required>
                                <div class="invalid-feedback">
                                    Please enter the price.
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">UPDATE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>